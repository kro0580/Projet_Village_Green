{% extends 'base.html.twig' %}

{% block title %}Village Green{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="alert alert-success ml-2 mr-2">
            Vous êtes connecté(e) en tant que <b>{{ app.user.username }}</b> <a type="button" class="btn btn-danger" id="bouton_deconnexion" href="{{ path('logout') }}">Déconnexion</a>
        </div>
    {% else %}
        <div class="alert alert-secondary ml-2 mr-2">
            Bienvenue ! Vous n'êtes pas connecté(e)
        </div>
    {% endif %}

<div class="container p-0" id="corps_index">
    <div class="row ml-5 mr-4">
        <div class="col-lg-9 col-sm-12">
            <img src="img/BODY/pub_guitare.png" id="guitare" alt="guitare">
        </div>
        <div class="col-lg-3 col-sm-12" id="promo">
            <img src="img/BODY/banniere_droite.png" id="banniere_droite" alt="banniere_droite">
        </div>
    </div>

    <div class="row  mt-3">
        <div class="col-12">
            <img src="img/BODY/banniere_centre.png"id="centre" alt="banniere_centre">
        </div>
    </div>

    <h3 id="titre_categories" class="ml-3 mt-2 mb-2">Nos catégories</h3>

    <div class="row m-0 p-0" id="lignephoto">

        <div class="col-lg-3 p-0 "><img src="img/BODY/CATEGORIES_guitare.png"
                                        onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_guitare.png'"
                                        onmouseout="this.src='img/BODY/CATEGORIES_guitare.png'"
                                        class="img-fluid" id="imgguit" alt="imgguit"></div>
        <div class="col-lg-3 p-0"><img src="img/BODY/CATEGORIES_batterie.png"
                                        onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_batterie.png'"
                                        onmouseout="this.src='img/BODY/CATEGORIES_batterie.png'"
                                        class="img-fluid" id="imgbat" alt="imgbat"></div>
        <div class="col-lg-3 p-0"><img src="img/BODY/CATEGORIES_piano.png"
                                        onmouseover="this.src='img/BODY/CATEGORIESpiano.png'"
                                        onmouseout="this.src='img/BODY/CATEGORIES_piano.png'"
                                        class="img-fluid" id="imgpia" alt="imgpia"></div>
        <div class="col-lg-3  p-0"><img src="img/BODY/CATEGORIES_micro.png"
                                        onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_micro.png'"
                                        onmouseout="this.src='img/BODY/CATEGORIES_micro.png'"
                                        class="img-fluid" id="imgmic" alt="imgmic"></div>
    </div>

    <div class="row m-0 p-0" id="lignephoto">

        <div class="col-lg-3 p-0"><img src="img/BODY/CATEGORIES_sono.png"
                                    onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_sono.png'"
                                    onmouseout="this.src='img/BODY/CATEGORIES_sono.png'"
                                    class="img-fluid" id="img_sono" alt="sono"></div>
        <div class="col-lg-3 p-0"><img src="img/BODY/CATEGORIES_cases.png"
                                    onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_cases.png'"
                                    onmouseout="this.src='img/BODY/CATEGORIES_cases.png'"
                                    class="img-fluid" id="img_case" alt="cases"></div>
        <div class="col-lg-3 p-0"><img src="img/BODY/CATEGORIES_cable.png"
                                    onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_cables.png'"
                                    onmouseout="this.src='img/BODY/CATEGORIES_cable.png'"
                                    class="img-fluid" id="img_cable" alt="cable"></div>
        <div class="col-lg-3 p-0 "><img src="img/BODY/CATEGORIES_saxo1.png"
                                    onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_saxo.png'"
                                    onmouseout="this.src='img/BODY/CATEGORIES_saxo1.png'"
                                    class="img-fluid" id="img_saxo" alt="saxo"></div>

    </div>

    <div class="row ml-2 mt-3" id="rowb">
        <div class="col-lg-6 col-sm-12 m-0 pr-1">

            <h3>Nos meilleures ventes</h3>

            <div id="img_meilleures_ventes" class="row ml-0">

                <div class="col-4 pr-2" id="img2">
                    <img src="img/BODY/TOP_VENTES_guitare.png "
                        onmouseover="this.src='img/BODY/ROLL_OVER_guitare.png'"
                        onmouseout="this.src='img/BODY/TOP_VENTES_guitare.png' "
                        class="img-fluid" id="vente_guitare" alt="guitare">
                </div>

                <div class="col-4 pr-2" id="img3">
                    <img src="img/BODY/TOP_VENTES_saxo.png"
                        onmouseover="this.src='img/BODY/TOP_VENTES_ROLLOVER_saxo.png'"
                        onmouseout="this.src='img/BODY/TOP_VENTES_saxo.png'"
                        class="img-fluid" id="vente_saxo" alt="saxo">
                </div>

                <div class="col-4 pr-2" id="img4">
                    <img src="img/BODY/TOP_VENTES_piano.png"
                        onmouseover="this.src='img/BODY/TOP_VENTES_ROLLOVER_piano.png'"
                        onmouseout="this.src='img/BODY/TOP_VENTES_piano.png'"
                        class="img-fluid" id="vente_pianos" alt="piano">
                </div>

            </div>
        </div>

        <div class="col-lg-6 col-sm-12 pr-2 pb-3" id="img9">

            <h3 id="titre_partenaires">Nos partenaires</h3>
            <img src="img/BODY/partenaires_4_logos.png" class="img-fluid" alt="partenaires">

        </div>

    </div>
</div>

{% endblock %}
