{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}
{% block body %}
    <div class="container">
        <h1>Je passe ma commande</h1>
        <p>Choisissez vos préférences avant de passez votre commande</p>
        <hr>
        <div class="row">
            <div class="col-md-6">
                {% set formHtml %}
                    {{ form_start(form, {action:path('order_recap')}) }}
                    {{ form_label(form.adresseLiv, 'Veillez choisir votre adresse de livraison') }}
                    <a href="{{ path('add_adresse') }}">Ajouter une adresse</a>
                    {{ form_end(form) }}
                {% endset %}
                {{ formHtml|replace({'[br]' : "<br/>"})|raw }}
            </div>
            <div class="col-md-6">
                <p>Recap du panier </p>
                <div class="table-responsive-md">
                    <table class="table table-hover text-center">
                        {% set total= null %}
                        {% for produit in cart %}
                            <tr >
                                <th><img src="{{ asset('img/PRODUITS/')}}{{ produit.produit.proPhoto }}" alt="{{ produit.produit.proLib }}" height="20%"></th>
                                <td>{{ produit.produit.proLib }} </td>
                                <td>x {{ produit.quantite }}</td>
                                <td>{{ produit.produit.proPrixAchat }}€</td>
                                <td>{{ (produit.produit.proPrixAchat * produit.quantite)|number_format(2)}}€</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
