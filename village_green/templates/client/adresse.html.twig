{% extends 'base.html.twig' %}
{% block title %}
 Mes adresses
{% endblock %}
{% block body %}
 <div class="container">
  <h1 id="adresse_client">Mes adresses</h1>
  <a href="{{ path('cart') }}" id="adresse_panier" class="btn btn-outline-primary float-right">MON PANIER</a>
  <a href="{{ path('add_adresse') }}" class="btn btn-outline-primary float-right">AJOUTER UNE ADRESSE</a>
  <img src=" {{ asset('img/BODY/ESPACE CLIENT/adresse.png') }}" id="img_adresse" alt="img adresse">
  {% if app.user.cliAdresses|length == 0 %}
   <p id="adresse_vide" class="text-center">Vous n'avez pas encore renseign√© d'adresse. Pour en ajouter une, <a href="{{ path('add_adresse') }}">cliquer ici ou sur le bouton "AJOUTER UNE ADRESSE"</a> </p>
  {% else %}
  <p id="adresse_principale"><strong>Mon adresse principale :</strong></p> 
   <div id="bloc_adresse" class="row">
    {% for adresse in app.user.cliAdresses %}
     <div class="col">
         {% set formHtml %}
            {{ adresse }} <br>
         {% endset %}
         {{ adresse|replace({'[br]' : "<br/>"})|raw }}
     </div>
     <hr>
    {% endfor %}

   </div>
  {% endif %}
 </div>
{% endblock %}



