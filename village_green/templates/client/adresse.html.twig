{% extends 'base.html.twig' %}
{% block title %}
 Mes adresses
{% endblock %}
{% block body %}
 <div class="container">
  <h1 style="margin-bottom: 20px; text-align: center;">Mes adresses</h1>
  <a href="{{ path('cart') }}" style="margin-left: 10px;" class="btn btn-info btn-sm float-right">MON PANIER</a>
  <a href="{{ path('add_adresse') }}" class="btn btn-info btn-sm float-right">AJOUTER UNE ADRESSE</a>
  {% if app.user.cliAdresses|length == 0 %}
   <p class="text-center">Vous n'avez pas encore ajout√© d'adresse. Pour en ajouter une, veuillez <a href="{{ path('add_adresse') }}">cliquer ici</a> </p>
  {% else %}
   <div style="padding-bottom: 20px;" class="row">
    {% for adresse in app.user.cliAdresses %}
     <div class="col">
         {% set formHtml %}
            {{ adresse }} <br>
         {% endset %}
         {{ adresse|replace({'[br]' : "<br/>"})|raw }}
     </div>
     <hr>
    {% endfor %}

   </div>
  {% endif %}
 </div>
{% endblock %}



