{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center">{{ produit.proLib }}</h1>

        <img id="img_show" class="text-center" src="{{ asset('img/PRODUITS/')}}{{ produit.proPhoto }}" alt="photo_detail" title="photo_detail" />

    <table class="table mt-3 table-striped table-hover table-responsive">
        <tbody>
            <tr>
                <th>Description</th>
                <td class="col-lg">{{ produit.proDescr }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td class="col-lg">{{ produit.proPrixAchat }}&nbsp;&euro;</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    
    <a type="button" class="btn btn-secondary" id="btn_retour2" href="{{ path('produit_index') }}">RETOUR</a>
    
    <a type="button" class="btn btn-primary" id="btn_modif" href="{{ path('produit_edit', {'proId': produit.proId}) }}">MODIFIER</a>

    {{ include('produit/_delete_form.html.twig') }}

    {% else %}

    <a type="button" class="btn btn-secondary" id="btn_retour2" href="{{ path('produit_index') }}">RETOUR</a>
    
    {% endif %}
    </div>
{% endblock %}
